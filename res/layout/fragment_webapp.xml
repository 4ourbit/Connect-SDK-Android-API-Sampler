<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/launchWebAppButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch Web App" />

    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/sendMessageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Message" />

        <Button
            android:id="@+id/sendJSONButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send JSON" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/closeWebAppButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close WebApp" />

    </LinearLayout>
    
         
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp" >

   	 	<TextView android:id="@+id/responseMessageTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
