<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SeekBar
        android:id="@+id/volumeSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp" >

        <ToggleButton
            android:id="@+id/muteToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Mute"
            android:textOn="Mute" />

        <Button
            android:id="@+id/volumeUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vol Up" />

        <Button
            android:id="@+id/volumeDownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vol Down" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/channelUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ch Up" />

        <Button
            android:id="@+id/channelDownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ch Down" />
        
         <Button
            android:id="@+id/powerOffButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power Off" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Channel Number: " />

        <TextView
            android:id="@+id/textChannelNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Channel Name: " />

        <TextView
            android:id="@+id/textChannelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp" >

       <Button
            android:id="@+id/incomingCallButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incoming Call" />
       
       <Button
            android:id="@+id/mode3DButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3D Mode" />

    </LinearLayout>

    <ListView
        android:id="@+id/channelListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >
    </ListView>

</LinearLayout>
